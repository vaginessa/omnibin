<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>


    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/pixelAccent</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">?colorPrimary</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogStyle.Blue</item>
        <item name="alertDialogTheme">@style/AlertDialogStyle.Blue</item>

        <item name="textColor">@android:color/white</item>
        <item name="fabIconColor">@android:color/black</item>
        <item name="noteCardStrokeColor">@android:color/darker_gray</item>

        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="AlertDialogStyle.Blue" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="colorAccent">@color/pixelAccent</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:dialogCornerRadius" tools:targetApi="p">10dp</item>
        <item name="android:background">@color/darkBackground</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogStyle.Button.Blue</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogStyle.Button.Blue</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogStyle.Button.Blue</item>
    </style>

    <style name="AlertDialogStyle.Button.Blue" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/pixelAccent</item>
        <item name="textAllCaps">false</item>
    </style>



